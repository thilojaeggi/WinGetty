{% extends "base.j2" %}
{% set title = "Package: " ~ package.name %}
{% block content %}


<div class="sm:flex sm:items-center sm:justify-between">
    <div>
        <div class="flex items-center gap-x-3">
            <div class="flex flex-col">
                <h2 class="text-3xl font-medium text-gray-800 dark:text-gray-200">{{ package.name }}</h2>
                <h4 class="text-gray-500 dark:text-neutral-400 text-base font-semibold">{{package.identifier}}</h4>
                <div class="flex flex-row gap-x-2">
                <span
                    class="px-3 py-1 mt-1 text-base text-center {{ 'bg-emerald-100/60 dark:bg-emerald-700/60 text-emerald-600 dark:text-emerald-300' if package.versions|length > 0 else 'bg-red-100/60 dark:bg-red-700/60 text-red-500 dark:text-red-300' }} rounded-full ">
                    {{ 'Version ' + (package.versions|sort_versions)[0].version_code if
                    package.versions|length > 0 else 'No versions' }}
                </span>
                <span class="px-3 py-1 mt-1 text-base text-center text-blue-600 dark:text-blue-300 bg-blue-200/60 dark:bg-blue-600/60 rounded-full ">
                    {{ package.download_count }} {{ 'Downloads' if
                    (package.download_count > 1 or package.download_count == 0) else 'Download' }}
                </span>
            </div>
            </div>
            

        </div>

    </div>

</div>

<div class="flex flex-col md:flex-row max-h-96 sm:h-96 gap-x-4 gap-y-12 mt-4">
    <div class="h-full w-full max-w-screen-sm">
        <h3 class="text-2xl mb-1 select-none font-medium dark:text-gray-200">Info</h3>
        <div class="bg-white/70 dark:bg-neutral-900 rounded-md h-min max-h-full overflow-y-auto p-2 w-full flex flex-col space-y-2">
            <h4 class="font-base text-2xl self-start hidden mr-2"></h4>
            <form class="mt-5 flex flex-col h-full" x-data="{'fileChosen': false}"
                action="{{ url_for('api.update_package', identifier=package.identifier) }}" method="POST"
                enctype="multipart/form-data">



                <div class="mt-2">
                    <label for="name" class="block  text-gray-700 dark:text-gray-300 ">Name</label>
                    <input required name="name" placeholder="" type="text" value="{{package.name}}"
                        class="block w-full px-3 py-2 mt-1 text-gray-600 dark:text-gray-200 dark:bg-neutral-950 placeholder-gray-400 bg-white border border-gray-200 dark:border-gray-50/30 rounded-md focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
                </div>

                <div class="mt-2">
                    <label for="publisher" class="block text-gray-700 dark:text-gray-300 ">Publisher</label>
                    <input required name="publisher" placeholder="" type="text" value="{{package.publisher}}"
                        class="block w-full px-3 py-2 mt-1 text-gray-600 dark:text-gray-200 dark:bg-neutral-950 placeholder-gray-400 bg-white border border-gray-200 dark:border-gray-50/30 rounded-md focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
                </div>
                <div class="mt-2">
                    <label for="identifier" class="block  text-gray-700 dark:text-gray-300 ">Identifier</label>
                    <input required name="identifier" placeholder="" type="text" value="{{package.identifier}}"
                        class="block w-full px-3 py-2 mt-1 text-gray-600 dark:text-gray-200 dark:bg-neutral-950  placeholder-gray-400 bg-white border border-gray-200 dark:border-gray-50/30 rounded-md focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
                </div>



                <div class=" grow flex flex-row justify-end mt-2">
                    <button type="submit"
                        class="self-end		 px-3 py-2  text-white  transition-colors duration-300 transform bg-blue-600 hover:bg-blue-500 rounded-md focus:outline-none focus:bg-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                        Update Metadata
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="h-full w-full max-w-screen-sm">
        <div class="flex flex-row" x-data="{ 'showModal': false }">
            <h3 class="text-2xl mb-1 select-none font-medium dark:text-gray-200">Versions</h3>

            <button type="button" @click="showModal = true"
                class="bg-blue-600 hover:bg-blue-500 transition-colors duration-300 p-0.25 rounded-md text-white h-min self-end ml-2 mb-1.5"><svg
                    class="h-6 " xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
            {% include 'modals/add_version.j2' %}
        </div>
        <!-- Adding flex-col here hides the scrollbar -->
        <div class="bg-white/70 dark:bg-neutral-900 rounded-md h-full p-2 flex flex-col overflow-y-auto space-y-2 scrollbar-none">

            {% if package.versions|length == 0%}
            <div class="h-full w-full flex flex-col justify-center items-center">
                <p class="text-gray-500 text-center">No versions, consider adding at least one</p>
            </div>
            {% endif %}

            <div class="drop-shadow-md flex flex-col divide-y dark:divide-gray-200/25">
                {% for version in package.versions|sort_versions %}
                <div class="bg-white dark:bg-neutral-950 {% if loop.first %}rounded-t-md{% elif loop.last %}rounded-b-md{% endif %} {% if package.versions|length == 1 %} rounded-md {% endif %} flex flex-col"
                    x-data="{ expanded: false }" @click.away="expanded = false">
                    <div class="flex  flex-row justify-between items-center cursor-pointer p-2"
                        @click="expanded = !expanded">
                        <p class="font-semibold text-xl select-none dark:text-gray-200">{{version.version_code}}</p>
                        <p class="text-gray-700 dark:text-gray-300/70 select-none">{{version.date_added.strftime('%d.%m.%Y %H:%M')  or ""}} </p>
                    </div>
                    <div x-show="expanded" x-collapse>
                        <div class="flex flex-col p-2">
                            <h3 class="text-xl font-medium select-none dark:text-gray-200">Info</h3>
                            <div class="flex flex-row dark:text-gray-300">
                                <div class="flex flex-col">
                                    <p>Default locale</p>
                                    <p>Package locale</p>
                                    <p>Short description</p>
                                </div>
                                <div class="flex flex-col ml-2">
                                    <p>{{version.default_locale}}</p>
                                    <p>{{version.package_locale}}</p>
                                    <p>{{version.short_description}}</p>
                                </div>
                            </div>

                            <h3 class="text-xl font-medium select-none dark:text-gray-200">Installers</h3>
                            <div class="flex flex-row">
                                <div class="bg-gray-100 text-gray-500 dark:text-gray-200 dark:bg-neutral-800 p-1.5 flex flex-col rounded-md w-1/2">
                                    {% if version.installers|length == 0%}
                                    <p class="">No installers, consider adding one</p>
                                    {% endif %}
                                    {% for installer in version.installers %}
                                    <div class="flex flex-row p-2 bg-white dark:bg-neutral-800 rounded-md justify-between"
                                        @click="navigator.clipboard.writeText('{{ url_for('api.download', identifier=package.identifier, version=version.version_code, architecture=installer.architecture, _external=True).replace("http://localhost", "https://thilojaeggi-psychic-tribble-jrg579jpj935p64-5000.preview.app.github.dev") }}');">


                                        <p class="font-bold">{{installer.architecture}}</p>
                                        <div class="flex flex-row space-x-2 group cursor-pointer">
                                            <svg class="group-hover:stroke-blue-500 h-6 w-6 transition-colors duration-300"
                                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                                            </svg>
                                            <p class="group-hover:text-blue-600 transition-colors duration-300">Copy
                                                link
                                            </p>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                <button
                                    class="bg-blue-600 hover:bg-blue-500 transition-colors duration-300 p-0.5 rounded-md text-white h-min self-end ml-2"><svg
                                        class="h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M12 4.5v15m7.5-7.5h-15" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {%endfor%}
            </div>
        </div>
    </div>


</div>
    {% endblock %}